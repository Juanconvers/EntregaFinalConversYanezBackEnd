

<section>
  <div>
    <div>
      <h2>Registro de usuario</h2>
    </div>
    
    <form>
      <div>
        <div>
          <label for="firstName">Nombre</label>
          <div>
            <input name="first_name" type="text" id="firstName" required="" value=""/>
          </div>
        </div>
        
        <div>
          <label for="lastName">Apellido</label>
          
          <div>
            <input name="last_name" type="text" id="lastName" required="" value=""/>
          </div>
        </div>
      </div>

      <div>
        <label for="email">Email</label>
        <div>
          <input type="email" name="email" id="email" required="" value=""/>
        </div>
      </div>

      <div>
        <label for="age">Edad</label>
        <div>
          <input type="number" name="age" id="age" value=""/>
        </div>
      </div>

      <div>
        <label for="password">Contraseña</label>
        <div class="mt-1">
          <input type="password" name="password" id="password" required="" value=""/>
        </div>
      </div>
      
      <div>
        <label for="profilePicture">Profile Picture</label>
        <div>
          <input type="file" id="profilePicture" name="profile_picture" accept="image/*"/>
          <div id="imagePreview" class="image-preview"></div>
        </div>
      </div>

      <div>
        <button type="submit">Regístrate</button>
      </div>

      <div>
        <a href="/login">Si ya es usuario de nuestro servicio, iniciar sesión</a>
      </div>
    </form>
    
  </div>
</section>

<script src="/js/register.js"></script>