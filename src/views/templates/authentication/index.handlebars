<div class="row">
  <div class="col-md-4 mx-auto">
    <div class="card mt-5 bg-black text-black rounded">
      <div class="card-header text-center pt-5">
        <h1 class="h4 text-black">
          E-COMMERCE CONVERS
        </h1>
        <h2 class="h4 text-black">
          Regístrese para comenzar
        </h2>
      </div>
      <div class="card-body">
        <form action="/auth/signup" method="POST">
          <div class="mb-3">
            <label for="name">Nombre:</label>
            <input
              type="text"
              class="form-control bg-white text-blue"
              name="name"
              value="{{name}}"
            />
          </div>
          <div class="mb-3">
            <label for="last_name">Apellido:</label>
            <input
              type="text"
              class="form-control bg-white text-blue"
              name="name"
              value="{{last_name}}"
            />
          </div>
          <div class="mb-3">
            <label for="email">Email:</label>
            <input
              type="email"
              class="form-control bg-white text-blue"
              name="email"
              value="{{email}}"
            />
          </div>
          <div class="mb-3">
            <label for="age">Edad:</label>
            <input
              type="number"
              class="form-control bg-white text-blue"
              name="age"
              value="{{age}}"
            />
          <div class="mb-3">
            <label for="password">Contraseña</label>
            <input
              type="password"
              class="form-control bg-white text-blue"
              name="password"
              value="{{password}}"
            />

          <button type="submit" class="btn btn-success btn-block">
            Registrarse
          </button>
        </form>
      </div>
      <p class="text-center">
        <a href="/login" class="text-info">Iniciar Sesión</a></p>
    </div>
  </div>
</div>


